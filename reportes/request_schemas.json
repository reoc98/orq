            "pagina_actual": {
                "type": "integer",
                "minLength": 1
            },
            "no_siniestro": {
                "type": "integer",
                "minLength": 1,
                "maxLength": 10
            },
            "departamento": {
                "type": "integer",
                "minLength": 1
            },
            "ciudad": {
                "type": "integer",
                "minLength": 1
            },
            "tipo_fecha": {
                "type": "integer",
                "minLength": 1
            },
            "fecha_inicial": {
                "type": "string",
                "minLength": 1
            },
            "fecha_final": {
                "type": "string",
                "minLength": 1
            },
            "id_usuario": {
                "type": "integer"
            }
        },
        "required": [
            "num_resultados",
            "pagina_actual",
            "id_usuario"
        ]
    },
